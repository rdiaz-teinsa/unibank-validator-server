{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types.d.ts"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}